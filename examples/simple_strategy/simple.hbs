name: SimpleStrategy
version: "0.0.1"
description: "Example of a simple strategy model"

markets
    Market
        connector: Binance('MY_API_KEY', 'MY_API_SECRET')
        pairs: ['ADA-USDT']
    end

    Market
        connector: AscentEX('MY_API_KEY', 'MY_API_SECRET')
        pairs: ['ADA-USDT']
    end
end

parameters
    Param
        name: max_spread
        type: float
        default: 1.0
        description: "The maximum spread value"
        dynamic_reconfigure: true
    end
    Param
        name: spread
        type: float
        default: 0.5
        description: "How far away from the mid price do you want to place bid and ask orders"
    end
end
