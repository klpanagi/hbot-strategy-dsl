name: SimpleStrategy
version: "0.0.1"
description: "Example of a simple strategy model"
type: Script

markets
    Market
        connector: kucoin
        pairs: ['BTC-USDT']
    end

    Market
        connector: binance
        pairs: ['BTC-USDT', 'ETH-USDT']
    end
end


parameters
    Param
        name: order_refresh_time
        type: float
        default: 0.1
        description: "How ofted to refresh orders"
    end

    Param
        name: max_spread
        type: float
        default: 1.0
        description: "The maximum spread value"
        dynamic_reconfigure: true
    end

    Param
        name: spread
        type: float
        default: 0.5
        description: "How far away from the mid price do you want to place bid and ask orders"
    end
end
